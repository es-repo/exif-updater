<UserControl x:Class="ExifUpdater.FolderInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DockPanel>
    <Button Margin="0" Padding="10 5 10 5" FontWeight="Bold" DockPanel.Dock="Right" Width="Auto" Click="Browse">Обзор</Button>
    <TextBox Height="Auto" HorizontalAlignment="Stretch" DockPanel.Dock="Right" VerticalContentAlignment="Center"
      TextChanged="OnTextChanged"
      Text="{Binding FolderPath, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
  </DockPanel>
</UserControl>